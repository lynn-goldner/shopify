// colors
//-------------------------------------

$color-light-orange: #FFCD66;
$color-very-dark-magenta: #30172B;
$color-white: #fff;


// Backgrounds
$color-body: {{ settings.color_body_bg }};

// Header
$header-mobile-hight: 81px;

// Fonts
//-------------------------------------

@font-face {
    font-family: 'Righteous';
    src: url('{{ "Righteous-Regular.eot" | asset_url }}');
    src: url('{{ "Righteous-Regular.eot?#iefix" | asset_url }}') format('embedded-opentype'),
        url('{{ "Righteous-Regular.woff2" | asset_url }}') format('woff2'),
        url('{{ "Righteous-Regular.woff" | asset_url }}') format('woff'),
        url('{{ "Righteous-Regular.ttf" | asset_url }}') format('truetype'),
        url('{{ "Righteous-Regular.svg#Righteous-Regular" | asset_url }}') format('svg');
    font-weight: normal;
    font-style: normal;
}

@font-face {
    font-family: 'Rhodium Libre';
    src: url('{{ "RhodiumLibre-Regular.eot" | asset_url }}');
    src: url('{{ "RhodiumLibre-Regular.eot?#iefix" | asset_url }}') format('embedded-opentype'),
        url('{{ "RhodiumLibre-Regular.woff2" | asset_url }}') format('woff2'),
        url('{{ "RhodiumLibre-Regular.woff" | asset_url }}') format('woff'),
        url('{{ "RhodiumLibre-Regular.ttf" | asset_url }}') format('truetype'),
        url('{{ "RhodiumLibre-Regular.svg#RhodiumLibre-Regular" | asset_url }}') format('svg');
    font-weight: normal;
    font-style: normal;
}

body {
    font-size: 16px;
    line-height: 24px;
}

// Heading 
//-------------------------------------

h1, h2, h3, h4, h5, h6 {
    font-family: 'Righteous', cursive;
    font-weight: normal;
    margin: 0 0 16px 0;
    padding: 0;
}
    
h1{
    font-size: 32px;
    line-height: 40px;
}

h2 {
    font-size: 24px;
    line-height: 32px;
}

h3 {
   font-size: 16px;
   line-height: 24px; 
}

h4, h5, h6 {
    font-size: 16px;
    line-height: 16px;
}

.heading-uppercase {
    letter-spacing: 0.1em;
    text-transform: uppercase;
}

h1.heading-uppercase {
    font-size: 24px;
    line-height: 32px;
}

h2.heading-uppercase{
    font-size: 16px;
    line-height: 24px;
}

.heading-uppercase-small {
    font-size: 12px;
    line-height: 16px;
    letter-spacing: 0.1em;
    text-transform: uppercase;
}

// Typograph
// ----------------------------------------------

p {
    font-family: 'Rhodium Libre', serif;
    font-size: 16px;
    line-height: 24px;
    margin-bottom: 16px;
}

.crossed-text {
    font-size: 16px;
    line-height: 24px;
    text-decoration-line: line-through;
    color: $color-light-orange;
}

.mini-text {
    font-size: 12px;
    line-height: 16px;  
}

.mini-text-uppercase {
    font-size: 12px;
    line-height: 24px; 
    text-transform: uppercase;
}



// Icons 
//-------------------------------------


.icon {
    width: auto;
    height: 24px;    
}


// Buttons 
//-------------------------------------

button,
.btn,
.btn:not([disabled]) {
    font-family: 'Righteous', cursive;
    height: 45px;
    color: $color-light-orange;
    background: $color-very-dark-magenta;
    padding: 12px 20px;
    line-height: 24px;
    text-transform: uppercase;
    font-weight: normal;
    border: 0;
    border-radius: 0;
    font-size: 24px;
    letter-spacing: 0.02em;

    &:focus,
    &:hover,
    &:active
    {
        background: $color-light-orange;
        color: $color-very-dark-magenta;
    }
}

.btn-light-orange:not([disabled]),
.btn-light-orange {
    background-color: $color-light-orange;
    color: $color-very-dark-magenta;

    &:hover,
    &:active,
    &:focus {
        background: $color-very-dark-magenta;
        color: $color-light-orange;
    }
}

// Badge
// --------------------------------

.badge {
    background: $color-light-orange;
    border-radius: 5px;
    color: $color-very-dark-magenta;
    padding: 4px 5px;
    @extend .mini-text-uppercase;
}

// Minicart
// -----------------------------------------------------------

.minicart-trigger {

    .badge {
        line-height: 16px;
        padding: 4px 5px;
        min-width: 25px;
        display: inline-block;
        text-align: center;
    }
}

// Header
// -----------------------------------------------------------

.announcement-bar {
    background: linear-gradient(90deg, rgba(120,246,255,1) 0%, rgba(120,96,255,1) 39%, rgba(255,96,208,1) 70%,rgba(255,217,90,1) 100%);
    height: 15px;
    position: absolute; 
    width: 100%
}
    
    
.site-header {
    height: $header-mobile-hight;
    background-color: $color-very-dark-magenta;
}

.site-header__logo{
    top: 11px;
    position: relative;
}

.site-header__logo-image {

    img {
        height: 64px;
        width: 100%;
    }
}


.site-header__icon {
    padding: 0;
    height: 16px;
    width: 16px;

    &.site-header__menu {
        margin-left: 20px;
    }

    &.site-header__cart {
        margin-left: 15px;
    }
}

